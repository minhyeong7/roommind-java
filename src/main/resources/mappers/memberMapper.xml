<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.roomgenius.furniture_recommendation.mapper.MemberMapper">

    <!-- Result Map -->
    <resultMap id="MemberResultMap" type="com.roomgenius.furniture_recommendation.entity.MemberVO">
        <id property="userId" column="userId"/>
        <result property="username" column="username"/>
        <result property="phone" column="phone"/>
        <result property="address" column="address"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="role" column="role"/>
        <result property="createdDate" column="createdDate"/>
        <result property="updatedDate" column="updatedDate"/>
    </resultMap>

    <!-- 회원가입 -->
    <insert id="insertMember" parameterType="com.roomgenius.furniture_recommendation.entity.MemberVO" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO Users (username, phone, address, email, password, role)
        VALUES (
        #{username},
        #{phone},
        #{address},
        #{email},
        #{password},
        COALESCE(#{role}, 'user')
        )
    </insert>

    <!-- 이메일 중복 체크 -->
    <select id="countByEmail" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM Users
        WHERE email = #{email}
    </select>

    <!-- ID로 회원 조회 -->
    <select id="findById" resultMap="MemberResultMap" parameterType="int">
        SELECT userId, username, phone, address, email, password, role, createdDate, updatedDate
        FROM Users
        WHERE userId = #{userId}
    </select>

</mapper>
